<Application x:Class="ChaF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ChaF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <FontFamily x:Key="Font">
            /ChaF;component/Fonts/Roboto-Bold.ttf#Roboto,
            /ChaF;component/Fonts/NotoSansJP-Bold.otf#Noto Sans JP
        </FontFamily>
        <Style x:Key="WindowStyle" TargetType="Window">
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontFamily" Value="{StaticResource Font}"></Setter>
        </Style>
    </Application.Resources>
</Application>
