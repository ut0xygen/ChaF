<Application x:Class="ChaF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ChaF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <FontFamily x:Key="Font">
            /ChaF;component/Fonts/Subset/Roboto-Bold.ttf#Roboto,
            /ChaF;component/Fonts/Subset/NotoSansJP-Bold.otf#Noto Sans JP
        </FontFamily>
        <SolidColorBrush x:Key="ColorBackground" Color="Black" Opacity="0.5"/>
        <SolidColorBrush x:Key="ColorProgress" Color="Cyan" Opacity="0.7"/>
        <SolidColorBrush x:Key="ColorFont" Color="White"/>
        <SolidColorBrush x:Key="ColorBlink" Color="Cyan" Opacity="0"/>
        <Style x:Key="WindowStyle" TargetType="Window">
            <Setter Property="Foreground" Value="{StaticResource ColorFont}"></Setter>
            <Setter Property="FontFamily" Value="{StaticResource Font}"></Setter>
        </Style>
    </Application.Resources>
</Application>
